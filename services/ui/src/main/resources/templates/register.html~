<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script th:inline="javascript">
    document.addEventListener('DOMContentLoaded', function() {
        // Add search functionality
        const searchInput = document.querySelector('.search-box input');
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const availableRows = document.querySelectorAll('.card:first-of-type tbody tr');

            availableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Add event listener for save button
        const saveButton = document.getElementById('saveButton');
        saveButton.addEventListener('click', function() {
            // Here you would make an AJAX call to save the registration
            alert('Đã lưu thông tin đăng ký môn học thành công');
        });

        // Event handlers for adding/removing subjects
        const addButtons = document.querySelectorAll('.btn-add');
        addButtons.forEach(button => {
            button.addEventListener('click', function() {
                const subjectId = this.getAttribute('data-subject-id');
                // Here you would make an AJAX call to add the subject
                console.log('Adding subject with ID:', subjectId);
                // Show feedback to the user
                alert('Đã thêm môn học vào danh sách đăng ký');
            });
        });

        const removeButtons = document.querySelectorAll('.btn-remove');
        removeButtons.forEach(button => {
            button.addEventListener('click', function() {
                const subjectId = this.getAttribute('data-subject-id');
                // Here you would make an AJAX call to remove the subject
                console.log('Removing subject with ID:', subjectId);
                // Show feedback to the user
                alert('Đã xóa môn học khỏi danh sách đăng ký');
            });
        });
    });

    // Hàm hiển thị lịch học khi bấm vào icon
    function showSchedule(button) {
        const subjectId = button.getAttribute('data-subject-id');

        // Lấy dữ liệu môn học từ API
        const registeredSubjects = /*[[${view.registeredSubject}]]*/ [];
        const subject = registeredSubjects.find(s => s.subjectId == subjectId);

        if (subject && subject.schedules && subject.schedules.length > 0) {
            // Tạo nội dung hiển thị lịch học
            let scheduleContent = '';
            subject.schedules.forEach(schedule => {
                scheduleContent += `- ${schedule.content}\n`;
            });

            // Hiển thị thông báo với lịch học
            alert(`Lịch học môn ${subject.subjectName}:\n${scheduleContent}`);
        } else {
            alert('Không có lịch học cho môn này');
        }
    }
</script>

